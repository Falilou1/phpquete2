<?php
// calcule de la longueur de la chaine
$message1 = "0@sn9sirppa@#?ia'jgtvryko1" ;
$length = strlen ($message1) ;
// division par 2 de la chaine
$keyNumber = $length / 2 ;
// recuperation de la sous-chaine
$substring = 5;
$keyNumberR = substr($message1, $substring, $keyNumber) ;
// remplacement des chaines '@#?'
$finalC = str_replace('@#?', ' ', $keyNumberR);
// inversement des chaines de caracteres ;
echo strrev($finalC) ;
echo ' ';

// calcule de la longueur de la chaine
$message2 = "q8e?wsellecif@#?sel@#?setuotpazdsy0*b9+mw@x1vj" ;
$length = strlen ($message2) ;
// division par 2 de la chaine
$keyNumber = $length / 2 ;
// recuperation de la sous-chaine
$substring = 5;
$keyNumberR = substr($message2, $substring, $keyNumber) ;
// remplacement des chaines '@#?'
$finalC = str_replace('@#?', ' ', $keyNumberR);
// inversement des chaines de caracteres ;
echo strrev($finalC) ;
echo ' ';

// calcule de la longueur de la chaine
$message3 = "aopi?sgnirts@#?sedhtg+p9l!" ;
$length = strlen ($message3) ;
// division par 2 de la chaine
